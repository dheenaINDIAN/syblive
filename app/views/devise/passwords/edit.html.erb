<img src="/assets/ZatFish_Logo.png" width="540" height="235"  align="middle"/></a></div>
<div class="Sign-In">
<h4>Change your password</h4>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  
<p class="float-LT">
  <%if resource.errors[:password].present?%>
<%= f.label :password, "New password" ,:class=>"error"%>

<%= f.password_field :password %>
 <p><span class="err-msg"><%=resource.errors[:password][0]%></span></p>
<%else%>
<%= f.label :password, "New password"%>
<%= f.password_field :password %>
<%end%>
</p>

<p class="float-LT">
<%= f.label :password_confirmation, "Confirm new password" %>
<%= f.password_field :password_confirmation %>
</p>

<%= f.submit "Change" %>

<%end%>

<%= render :partial => "devise/shared/links" %>