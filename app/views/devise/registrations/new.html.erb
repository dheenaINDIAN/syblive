

<div class="logo"><a href="#">
<img src="/assets/logo.png" width="340" height="135"  align="middle"/></a></div>
<div class="sign-up">
<h4>Sign Up</h4>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<p class="float-LT">

 
 <%= f.label :email %>
 <%= f.text_field :email,  :class=>"error"%>
 <p><span class="hint">eg:g@go.com</span></p>
   <p><span class="err-msg"><%=resource.errors[:email][0]%></span></p>
   
   
  

</p>

<p class="float-LT">

  
  <%= f.label :password %>
  <%= f.password_field :password ,:class=>"error"%>
  <p><span class="hint">Minimum 6 characters</span></p>
   <p><span class="err-msg"><%=resource.errors[:password][0]%></span></p>
  
</p>

<p class="float-LT"><%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %></p>

<p class="float-LT">
<%= radio_button_tag(:position, "ceo") %>
<%= label_tag(:position_ceo, "CEO") %>
<%= radio_button_tag(:position, "manager") %>
<%= label_tag(:position_manager, "Manager") %>
<%= radio_button_tag(:position, "staff") %>
<%= label_tag(:position_staff, "Staff") %>
<p><span class="err-msg"><%=resource.errors[:position][0]%></span></p>
</p>
<%= f.submit "Sign up" %>

<% end %>
<p>
<%= render :partial => "devise/shared/links" %>
</p>
